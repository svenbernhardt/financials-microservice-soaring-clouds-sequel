# Deployment

apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: financials-ms
  labels:
    run: financials-ms
spec:
  replicas: 1
  selector: 
    matchLabels:
      run: financials-ms
  template:
    metadata:
      labels:
        run: financials-ms 
    spec:
      containers:
      #- args:
      #  - java
      #  - -jar
      #  - financials.jar
      #  image: sbernhardtoc/financials-ms-1.0.0.0
      - image: wcr.io/$WERCKER_APPLICATION_OWNER_NAME/$WERCKER_APPLICATION_NAME:$WERCKER_GIT_BRANCH-$WERCKER_GIT_COMMIT
        imagePullPolicy: Always
        name: financials-ms
        ports:
        - containerPort: 8080
          protocol: TCP
      imagePullSecrets:
      - name: wrelease  
      restartPolicy: Always

# Service
apiVersion: v1
kind: Service
metadata:
  labels:
    run: financials-ms
spec:
  selector:
    run: financials-ms
  ports:
  - port: 7777
    targetPort: 8080
  type: ClusterIP